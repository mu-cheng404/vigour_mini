<view class="page">
  <view class="drawpanel">
    <i-icon type="createtask" size="30" bindtap="toggleLeft1" />
  </view>
  <i-drawer mode="left" visible="{{showLeft1}}" bind:close="toggleLeft1">
    <view class="demo-container">
      <i-cell title="修改信息" is-link i-class="i_cell" url="../basicsDisplay/basicsDisplay">
        <view slot="icon">
          <i-icon type="brush" />
        </view>
      </i-cell>


      <i-cell title="反馈" is-link i-class="i_cell" url="../advise/advise">
        <view slot="icon">
          <i-icon type="feedback" />
        </view>
      </i-cell>
    </view>
  </i-drawer>
  <view class="avator">
    <image src="{{userInfo.avatarUrl}}" wx:if="{{hasUserInfo}}"></image>
    <image src="{{imageURL}}add.png" wx:else="{{hasUserInfo}}"></image>
  </view>
  <view class="nickname">
    <image src="/images/point.png"></image>
    <view wx:if="{{hasUserInfo}}"> {{userInfo.nickName}}</view>
    <view wx:else="{{hasUserInfo}}" bindtap="_getUserProfile"> 点击登录</view>
  </view>

  <!-- <view class="punchRecord baseStyle" bindtap="_handler_punchRecord">
