</view>
<view class="basics baseStyle" bindtap="_handler_basics">
  基本资料
</view>
<view class="advise baseStyle" bindtap="_handler_advise">
  意见反馈
</view> -->

  <view class="part2">
    <block wx:for="{{att_list}}" wx:for-item = "Item" wx:for-index = "idx">

      <i-card title="{{Item.nickName}}" extra="{{Item.praise}}" thumb="{{Item.avatarUrl}}" i-class="i_card">
      <view slot="content">{{Item.content}}</view>
      <view slot="footer">评论{{Item.comment}}</view>
    </i-card>
    </block>

  </view>
</view>