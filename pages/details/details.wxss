.page {
  width: 100%;
  height: 100%;
  border: 1rpx solid #C6DBE0;
}

.part1 {
  width: 710rpx;
  margin: 20rpx 20rpx 0rpx 20rpx;
  height: 140rpx;
  background-color: white;
  display: flex;
  position: relative;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 30rpx;
}

.avatar image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.nickname {
  height: 140rpx;

}

.nickname_upper,
.nickname_lower {
  height: 70rpx;
  font-size: 14px;
  line-height: 21px;
}

.nickname_upper {
  padding-top: 30rpx;
  font-weight: 600;
}

.nickname_lower {
  padding-bottom: 30rpx;
}

.put_attention1,
.put_attention2 {
  width: 130rpx;
  height: 70rpx;
  background-color: #437C87;
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  font-size: 25rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 70rpx;
  color: white;
}

.put_attention2 {
  background-color: #666666;
  color: white;
}

.part2 {
  width: 710rpx;
  margin: 0 20rpx 0rpx 20rpx;
  background-color: white;
  border: 0 solid white;
  padding-bottom: 20rpx;
}

.content {
  font-size: 14px;
  line-height: 21px;
  padding: 0rpx 30rpx 0rpx 30rpx;
}

.imageMargin {
  margin-bottom: 20rpx;
}

.imageList {
  width: 670;
  margin: 20rpx 30rpx 0 30rpx;
}

.imageList image {
  border-radius: 10rpx;

}

._image {
  width: 100%;
}

.part3 {
  width: 710rpx;
  height: 80rpx;
  background-color: white;
  margin: 0 20rpx 20rpx 20rpx;
  position: relative;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  display: flex;
}

.likeIcon,
.commentIcon,
.shareIcon {
  width: 236rpx;
  height: 80rpx;
  /* background-color: teal; */
  text-align: center;
  line-height: 80rpx;
  font-size: 20px;
}
