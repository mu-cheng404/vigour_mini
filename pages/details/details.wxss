.title {
  width: 710rpx;
  margin: 20rpx;
  height: 24px;
  line-height: 24px;
  font-size: 18px;
  font-weight: bold;
}

.input {
  width: 100%;
  height: 120rpx;
  background-color: white;
  display: flex;
  position: fixed;
  bottom: 0rpx;
  /* margin-left: -20rpx; */
}

.input image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 75%;
  margin: 20rpx;

}

.input input {
  width: 600rpx;
  height: 80rpx;
  margin-top: 20rpx;
  background-color: rgb(239, 239, 239);
  border-radius: 30rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  padding-left: 10rpx;
}

.placeholder {}

.buttom {
  height: 50rpx;
  width: 100%;
}

.comment {
  width: 710rpx;
  margin: 20rpx 20rpx 40rpx 20rpx;
  border-radius: 50rpx;
  background-color: rgb(220, 225, 225);
}

.comment_part1 {
  display: flex;
  position: relative;
  height: 100rpx;
}
.comment_avatar image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin: 20rpx;
}

.comment_nickName {
  height: 100rpx;
}

.comment_nickname_upper,
.comment_nickname_lower {
  height: 50rpx;
  line-height: 21px;
}

.comment_nickname_upper {
  font-size: 14px;
  padding-top: 20rpx;
  font-weight: 600;
}
.comment_nickname_lower{
  font-size: 12px;
}
.comment_like {
  position: absolute;
