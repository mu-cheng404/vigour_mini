.page {
  margin: 20rpx;
  padding: 0rpx;
  border: 1rpx white solid;
  position: relative;
}

.part1 {
  width: 100%;
  height: 150rpx;
  /* background-color: khaki; */
  border: 1px white solid;
  display: flex;
  position: relative;
}

.avatar {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  /* background-color: lawngreen; */
  margin: 10rpx;
}

.avatar image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
}

.nickname {
  width: 300rpx;
  height: 130rpx;
  /* background-color: yellowgreen; */
  margin-top: 10rpx;
}

.nickname_upper,
.nickname_lower {
  height: 60rpx;
  /* background-color:turquoise; */
  font-size: 28rpx;
  line-height: 60rpx;
}

.nickname_upper {
  margin-bottom: 10rpx;
}

.put_attention1,
.put_attention2
 {
  width: 150rpx;
  height: 70rpx;
  background-color: tomato;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  font-size: 25rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 50rpx;
}
.put_attention2{
  background-color: #666666;
  color: white;
}

.part2 {
  width: 100%;
  /* background-color: teal;  */
}

_block {
  width: 100%;
  height: 500rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  /* background-color: wheat; */
  margin-top: 20rpx;
}

._image {
  width: 100%;
}

.part3 {
  width: 100%;
  height: 80rpx;
  /* background-color: violet; */
  margin-top: 20rpx;
  position: relative;
}

.icon-comment {
  position: absolute;
  right: 350rpx;
}

.icon-share {
  position: absolute;
  right: 0rpx;
}

.title {
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  /* background-color:wheat; */
  font-weight: bold;
}

.input {
  width: 100%;
  height: 120rpx;
  background-color: white;
  display: flex;
  position: fixed;
  bottom: 0rpx;
  margin-left: -20rpx;
}

.input image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 75%;
  margin: 20rpx;
  
}
.input input{
  width: 600rpx;
  height: 80rpx;
  margin-top: 20rpx;
  background-color: rgb(239, 239, 239);
  border-radius: 30rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  padding-left: 10rpx;
}
.placeholder{
}
.buttom{
  height: 50rpx;
  width: 100%;
}

.comment{
  width: 100%;
  
  background-color: white;
  border: 1px white solid;
  
  
}
.comment_part1{
  display: flex;
  position: relative;
  height: 100rpx;
}
.comment_part2{
  margin-left: 100rpx;
  margin-bottom: 100rpx;
  width: 590rpx;
  
  /* background-color: lawngreen; */
}
.comment_avatar image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 75%;
  margin: 10rpx;
}
.comment_nickName{
  width: 400rpx;
  height: 100rpx;
  margin-left: 20rpx;
}

.comment_nickname_upper,
.comment_nickname_lower {
  height: 45rpx;
  /* background-color:turquoise; */
  font-size: 24rpx;
  line-height: 45rpx;
}
.comment_nickname_upper {
  margin-bottom: 10rpx;
}
.comment_like{
  position: absolute;
  right: 10rpx;
}
.comment_content{
  width: 100%;
  /* background-color: khaki; */
  padding: 20rpx;
}
.van-button_comment{
  margin-left: 630rpx;
  
}
.jubao{
  display: inline;
  color: brown;
}