.page {
    width: 100%;
    height: 100vh;

}

.punchTips {
    width: 690rpx;
    height: 50rpx;
    /* background-color: turquoise; */
    margin: 30rpx;
    color: red;
    font-size: 30rpx;
    line-height: 50rpx;
}

.punchText {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 14px;
    font-weight: 600;
    background-color: #C6DBE0;
    padding: 20rpx;
}


.punchTitle {
    width: 690rpx;
    height: 120rpx;
    /* background-color: rgb(93, 194, 184); */
    margin: 30rpx;
    font-size: 45rpx;
    border-top: 1px solid white;
    border-bottom: 1px solid rgb(61, 164, 204);
    position: relative;
    display: flex;
}

.punchTitle text {
    position: absolute;
    right: 0rpx;
    font-size: 45rpx;
    line-height: 120rpx;
    color: rgb(206, 211, 216);
}

.punchTitle input {
    width: 600rpx;
    height: 70rpx;
    margin-top: 25rpx;

}

.punchContent {
    width: 710rpx;
    margin: 20rpx;
    display: flex;
    flex-direction: column;

}

.punchContent textarea {
    width: 710rpx;
    height: 300rpx;
    background-color: white;
    border-top-left-radius: 10rpx;
    border-top-right-radius: 10rpx;
    padding: 20rpx;
    font-size: 14px;
    line-height: 21px;
    position: relative;
}
.fushu{
    width: 710rpx;
    height: 80rpx;
    border-bottom-left-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
    background-color: white;
    font-size: 14px;
    padding-left: 20rpx;
    display: flex;
    padding-top: 20rpx;
}
.fushu input{
    background-color: rgb(238, 243, 241);
    flex: 1;
    margin:0rpx 20rpx 0rpx 20rpx;
    padding-left: 2rpx;
    padding-bottom: 2rpx;
}
.punchAccessory {
    width: 690rpx;
    height: 180rpx;
    /* background-color: antiquewhite; */
    margin: 30rpx;
    display: flex;
    align-items: center;
}

.Accessory_image {
    width: 140rpx;
    height: 140rpx;
    margin-right: 15rpx;
    border: 1rpx solid rgb(146, 140, 140);
    border-radius: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 1rpx 1rpx 1rpx rgb(211, 201, 201);
}

.selectPicture {
    position: absolute;
    bottom: 20rpx;
    width: 100%;
    height: 100rpx;
    z-index: 2;
}

.punchAccessory image {
    height: 70rpx;
}

.punchLocation,
.punchViewPermission {

    width: 710rpx;
    height: 100rpx;
    /* background-color: white; */
    margin: 20rpx;
    display: flex;
    line-height: 100rpx;
    position: relative;
    font-weight: 600;
    box-shadow: 0 0 5rpx 5rpx #ECECEC;
    position: relative;
}

.punchLocation text,
.punchViewPermission text {
    position: absolute;
    right: 0rpx;
}

.enter {
    position: absolute;
    right: 0rpx;
    width: 70rpx;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;

}

.Location_image,
.permission_image {
    width: 70rpx;
    height: 100rpx;
    /* background-color: aqua; */
    display: flex;
    align-items: center;
    justify-content: center;
}

.Location_image image,
.permission_image image {
    width: 40rpx;
    height: 40rpx;
}

.punchButton button {
    color: white;
    width: 712rpx;
    margin: 19rpx;
    height: 100rpx;
    line-height: 100rpx;
    
}

.selectPShow {
    display: flex;
}

.pShow {
    width: 140rpx;
    height: 140rpx;
    margin-left: 30rpx;
    background-color: khaki;
    border-radius: 10rpx;
    position: relative;
}

#deleteIcon {

    width: 50rpx;
    height: 50rpx;
    position: absolute;
    right: 2rpx;
    top: 5rpx;
    z-index: 99;
}

.pShow image {
    width: 140rpx;
    height: 140rpx;
    border-radius: 10rpx;

}