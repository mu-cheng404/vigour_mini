<!-- index.html -->
<!-- 自定义tabbar页面 -->
<cover-view class="tab-bar">
   <cover-view class="tab-bar-border"></cover-view><!--tabBal边框样式  -->

  <cover-view class='tab-bar-item' >
    <cover-image src='{{list[0].iconPath}}' hidden='{{isShow_index}}' bindtap='switchTab_index'></cover-image>
    <cover-image src='{{list[0].selectedIconPath}}' hidden='{{!isShow_index}}' bindtap='switchTab_index'></cover-image>
    <cover-view style="color:{{isShow_index ? selectedColor : color}}">首页</cover-view>
  </cover-view>


    <cover-view class='tab-bar-item' bindtap='switchTab_playing'>
    <cover-image src='{{list[1].iconPath}}' hidden='{{isShow_playing}}'></cover-image>
    <cover-image src='{{list[1].selectedIconPath}}' hidden='{{!isShow_playing}}'></cover-image>
    <cover-view style="color:{{isShow_me ? selectedColor : color}}">打卡</cover-view>
  </cover-view>


    <cover-view class='tab-bar-item' bindtap='switchTab_me'>
    <cover-image src='{{list[2].iconPath}}' hidden='{{isShow_me}}'></cover-image>
    <cover-image src='{{list[2].selectedIconPath}}' hidden='{{!isShow_me}}'></cover-image>
    <cover-view style="color:{{isShow_me ? selectedColor : color}}">我的</cover-view>
  </cover-view>
</cover-view>
